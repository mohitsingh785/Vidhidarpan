<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="9dp"
    android:background="@drawable/calllog_bg"
    android:orientation="horizontal"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="horizontal">

        <!-- Image View Added Here -->
        <ImageView
            android:id="@+id/advocateImage"
            android:layout_width="70dp"
        android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginStart="20dp"
        android:src="@drawable/account_circle"
            android:layout_marginEnd="20dp"
        />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/advocateName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name"

                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/advocatePhoneNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12233455"
                android:textAlignment="center"
                android:textColor="@color/light_grey"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/advocateWinPercentage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="percentage"
                android:textAlignment="center"
                android:textColor="@color/app_orange"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/advocateDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Description"
                android:maxLength="90"
                android:textColor="@color/light_grey"
                android:textSize="15sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
