<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/less_white"
    tools:context=".ChatActivity">
    <!-- Simplified example layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_height="?attr/actionBarSize"
            android:layout_width="match_parent"
            android:background="?attr/colorPrimary"
            app:title="CHAT WITH ADVOCATE"
            app:titleTextColor="@color/white"/>

        <EditText
            android:id="@+id/editTextMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/calllog_bg"
            android:hint="Drop Your Msg Here Once the Legal Service Provider Sees They reply you , Check on inbox"
            android:padding="20dp"
            android:textColor="@color/dark_grey"
            android:textColorHint="@color/app_orange"
            android:layout_weight="1" />

        <Button
            android:id="@+id/buttonSend"
            android:layout_width="match_parent"
            android:background="@drawable/calllog_bg"
            android:layout_margin="15dp"
            android:layout_height="wrap_content"
            android:text="Send" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>